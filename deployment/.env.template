# ============================================================================
# INFLUXDB CONFIGURATION
# ============================================================================
# Generate token: openssl rand -base64 32
INFLUXDB_TOKEN=your_production_influxdb_token_here_min_32_chars

# Admin password (change this!)
INFLUXDB_ADMIN_PASSWORD=your_secure_admin_password_here

# ============================================================================
# API KEYS
# ============================================================================
# OpenWeatherMap API (Required)
# Get from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# OpenAQ API (Optional - has fallback simulation)
# Get from: https://openaq.org
OPENAQ_API_KEY=your_openaq_api_key_here

# ============================================================================
# COLLECTOR CONFIGURATION
# ============================================================================
# Collection interval in seconds (default: 300 = 5 minutes)
COLLECTION_INTERVAL=300
