@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix geo:   <http://www.opengis.net/ont/geosparql#> .
@prefix ex:    <http://opendatafithou.org/poi/> .

#################################################################
# Ontology metadata
#################################################################
ex: a owl:Ontology ;
    rdfs:label "POI Ontology for Open Data FIT-HOU"@en ;
    rdfs:comment "Ontology mô tả dữ liệu POI từ OSM → RDF"@vi .

#################################################################
# Classes
#################################################################
ex:POI a owl:Class ;
    rdfs:label "Point of Interest"@en ;
    rdfs:comment "Một địa điểm/đối tượng quan tâm trong không gian"@vi .

# Geometry tái sử dụng từ GeoSPARQL
geo:Geometry a owl:Class .
geo:Point a owl:Class ;
    rdfs:subClassOf geo:Geometry .
geo:Polygon a owl:Class ;
    rdfs:subClassOf geo:Geometry .

#################################################################
# Object properties
#################################################################
geo:hasGeometry a owl:ObjectProperty ;
    rdfs:domain ex:POI ;
    rdfs:range geo:Geometry ;
    rdfs:label "has geometry"@en ;
    rdfs:comment "Liên kết POI với hình học của nó"@vi .

rdfs:seeAlso a owl:ObjectProperty ;
    rdfs:domain ex:POI ;
    rdfs:label "see also"@en ;
    rdfs:comment "Liên kết POI với Wikidata hoặc nguồn ngoài"@vi .

#################################################################
# Datatype properties
#################################################################
rdfs:label a owl:DatatypeProperty ;
    rdfs:domain ex:POI ;
    rdfs:range xsd:string .

ex:source a owl:DatatypeProperty ;
    rdfs:domain ex:POI ;
    rdfs:range xsd:string ;
    rdfs:label "Data Source"@en .

ex:osmType a owl:DatatypeProperty ;
    rdfs:domain ex:POI ;
    rdfs:range xsd:string ;
    rdfs:label "OSM Object Type"@en .

# Các tag OSM (amenity, leisure, highway, …)
ex:amenity a owl:DatatypeProperty ;
    rdfs:domain ex:POI ;
    rdfs:range xsd:string .

ex:leisure a owl:DatatypeProperty ;
    rdfs:domain ex:POI ;
    rdfs:range xsd:string .

ex:highway a owl:DatatypeProperty ;
    rdfs:domain ex:POI ;
    rdfs:range xsd:string .

#################################################################
# Geometry properties
#################################################################
geo:asWKT a owl:DatatypeProperty ;
    rdfs:domain geo:Geometry ;
    rdfs:range geo:wktLiteral ;
    rdfs:label "as WKT"@en ;
    rdfs:comment "Biểu diễn hình học dưới dạng WKT"@vi .
